@model CategoryUpdateDto
@{
    ViewData["Title"] = "Update";
}

<div class="container" style="background-color:#DCDCDC">
    <div class="card-body row">
        <h1 style="text-align:center; margin-bottom:20px;">Servis Yarat</h1>
        <form method="post" class="forms-sample" enctype="multipart/form-data">
            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
            <div style="width:40%; margin-bottom:40px;">
                <label style="margin-bottom:10px;  font-size:20px;" font-size:20px;" asp-for="@Model.categoryPostDto.formFile">Category Img</label>
                <input asp-for="@Model.categoryPostDto.formFile" accept="image/*" class="form-control">
                <span class="mt-2 text text-danger" asp-validation-for="@Model.categoryPostDto.formFile"></span>

                <div>
                    <img style="width:100%" src="~/assets/img/@Model.categoryGetDto.IMage" />
                </div>
            </div>


            <div class="row">
                <div style="width:50%;">
                    <label style="margin-bottom:10px; font-size:20px;" asp-for="@Model.categoryPostDto.Name">Name</label>
                    <input asp-for="@Model.categoryPostDto.Name" value="@Model.categoryGetDto.Name" type="text" class="form-control" />
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.categoryPostDto.Name"></span>
                </div>
                <input hidden asp-for="@Model.categoryGetDto.Id" />

            </div>
            <div class="col-md-12 mt-3">
                <a class="btn btn-dark" asp-controller="Service" asp-action="index"><i class="fas fa-undo"></i> Back</a>
                <button class="btn btn-primary" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}


