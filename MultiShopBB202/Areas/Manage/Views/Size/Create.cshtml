@model SizePostDto
@{
    ViewData["Title"] = "Create";
}

<div style="background-color:gainsboro" class="container">
    <div class="card-body row">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <form method="post" class="forms-sample" enctype="multipart/form-data">
            <h1 class="mb-5">MultiShop.az Setting</h1>



            <div class="row">
                <div class="col-md-6 mb-2 ">
                    <label asp-for="@Model.Value">Value </label>
                    <input asp-for="@Model.Value"  class="form-control">
                    <span class="mt-2 text text-danger" asp-validation-for="@Model.Value"></span>
                </div>
            </div>


            <div class="col-md-12 mt-3">
                <a class="btn btn-dark" asp-controller="Size" asp-action="index"><i class="fas fa-undo"></i> Back</a>
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>
@section Scripts{
