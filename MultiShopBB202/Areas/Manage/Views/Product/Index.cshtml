@model List<ProductGetDto>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Image</th>
                <th scope="col">Name</th>

            </tr>
        </thead>
        <tbody>
            @foreach (ProductGetDto dto in Model)
            {
                        <tr>
                            <th scope="row">@dto.Id</th>
                            <th>@dto.Name</th>
                            <td><a asp-controller="product" asp-action="Update" asp-route-id="@dto.Id"><i class="fas fa-edit text text-primary"></i></a></td>
                    <td><a class=" delete-item" asp-controller="product" asp-action="remove" asp-route-id="@dto.Id"><i class="fas fa-trash text text-danger"></i></a></td>
                        </tr>
            }
        </tbody>
    </table>
    <div>
        <a style="display: block; text-decoration: none; color: white; width: 100%; height: 100%" asp-controller="Product" asp-action="create"> <div style="width:100%; " class="btn btn-outline-success">Category Create </div></a>
    </div>

</div>

