@model LoginDto
@{
    ViewData["Title"] = "Login";
}

<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2> Register</h2>

                        </div>
                        <div class="login-form">
                            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                            <form method="post">

                        
                                <input asp-for="UserName" placeholder="UserName">
                                <span class="text text-danger" asp-validation-for="UserName"></span>


                                <input asp-for="Password" placeholder="Password">
                                <span class="text text-danger" asp-validation-for="Password"></span>



                                <div class="button-box">

                                    <div class="login-toggle-btn">
                                        
                                        <a asp-controller="account" asp-action="register">Has no Account?</a>
                                    </div>
                                    <button type="submit" class="default-btn">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


